{% extends 'base.html.twig' %}
{% set active_page = 'index' %}
{% block body %}
<script type="text/javascript" src="{{ asset('js/init.js') }}"></script>
<div class="span9">
  <div class="hero-unit">
    <h2>Aktualna sytuacja</h2>
    <div id="container">
    </div>
  </div>
  <div class="row-fluid">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Czujnik</th>
          <th>Wskazanie</th>
          <th>Min</th>
          <th>Max</th>
          <th>Åšrednia</th>
        </tr>
      </thead>
      <tbody>
        {% for item in data %}
        <tr>
          <td>{{ item.name }}</td>
          <td>{{ item.value }}&deg;C</td>
          <td>{{ item.min }}&deg;C</td>
          <td>{{ item.max }}&deg;C</td>
          <td>{{ item.avg }}&deg;C</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div><!--/row-->
</div><!--/span-->

{% endblock %}